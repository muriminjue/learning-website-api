<%- include('./_header'); %>
<script src="https://cdn.ckeditor.com/ckeditor5/29.0.0/classic/ckeditor.js"></script>
<div class="page-header" >
    <ul class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/faqs">Reviews</a></li>
        <li>Add Reviews</li>
      </ul>
    <h3 class="mt-0 p-3 pt-0" > Add a Review</h3>
    </div>

<div class="row">
<form action="/addreviews" Method="POST">
    <div class="input-group mb-3">
        <label class="form-label me-2" for="category">Fullname</label>
        <input class="form-control" type="text" name="fullname" id="">
       
    </div>
  
    <div class="row">
        <div class="col-md-5">
            <div class="input-group mb-3">
                <label class="form-label me-2" for="title">School:</label>
                <input class="form-control" type="text" name="school" id="">
            </div>
        </div>
        <div class="col-md-5">
    <div class="input-group mb-3">
        <label class="form-label me-2" for="title">Level:</label>
        <input class="form-control" type="text" name="level" id="">
    </div>
</div>
<div class="col-md-2">
    <div class="input-group mb-3">
        <label class="form-label me-2" for="title">Rating:</label>
      <input class="form-control" type="number" step="0.1" min="0.0" max="5" name="rating" id="" maxlength="3">
    </div>
</div>
</div>
    <div class="input-group mb-3">
        <label  class="form-label me-2" for="content">Content:</label>
        <textarea class="form-control ck-content" name="comment" id="editor"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">save</button>
</form>
</div>
<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );

</script>

<style>
      label {
        color: #fafafa;

    }

</style>


<%- include('./_footer'); %>