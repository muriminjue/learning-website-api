<%- include('./_header'); %>
<script src="https://cdn.ckeditor.com/ckeditor5/29.0.0/classic/ckeditor.js"></script>
<div class="page-header" >
    <ul class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/faqs">Faqs</a></li>
        <li>Edit Faqs</li>
      </ul>
    <h3 class="mt-0 p-3 pt-0" > Edit frequently asked questions</h3>
    </div>

<div class="row">
<form action="/faqedit/<%= faq.id %>?_method=PUT" Method="POST">
    <div class="input-group mb-3">
        <label class="form-label me-2" for="category">Category:</label>
        <select class="form-select" name="category" aria-label="Default select example" width="200">
            <option value="<%= faq.category %>""><%= faq.category %></option>
            <option value="pricing">Pricing</option>
            <option value="session">Session</option>
            <option value="curriculum and level">Curriculum and level</option>
          </select>
    </div>
    <div class="input-group mb-3">
        <label class="form-label me-2" for="title">Title:</label>
        <input class="form-control" type="text" name="title" id="" value="<%= faq.title %>"">
    </div>
    <div class="input-group mb-3">
        <label  class="form-label me-2" for="content">Content:</label>
        <textarea class="form-control ck-content" name="content" id="editor" ><%- faq.content %></textarea>
    </div>

    <button class="btn btn-primary" type="submit">save</button>
</form>
</div>
<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );

</script>

<style>
    label {
        color: #fafafa;

    }

</style>


<%- include('./_footer'); %>